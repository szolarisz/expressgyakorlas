<!DOCTYPE html>
<html lang="hu">

<head>
    <meta charset="UTF-8">

    <title>express alapok gyakorlás</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="mysql.css" rel="stylesheet" type="text/css">
    <link href="alapcss/main.css" rel="stylesheet" type="text/css">
</head>

<body>
    <h1>Express alapok</h1>
    <h2>Adatok listázása MySQL adatbázisból</h2>
    <a href = "/json"><button type="button" class="btn btn-primary">JSON file-ból</button></a>
    <%
        for(hivas of hivasok ){ 
            let hossz = hivas.vegeOra * 3600 + hivas.vegePerc *60 + hivas.vegeMp;
            hossz -= (hivas.kezdOra * 3600 + hivas.kezdPerc *60 + hivas.kezdMp);
            let hatter = "silver";
            if( hossz < 180){
                hatter = "lime";
            }

    %>
    <div style="margin-top: 5px; margin-left:10px; width: 222px; background-color: <%= hatter %>;">
        <%= hivas.kezdOra %>:
        <%= hivas.kezdPerc %>:
        <%= hivas.kezdMp %> - 
        <%= hivas.vegeOra %>:
        <%= hivas.vegePerc %>:
        <%= hivas.vegeMp %> (
            <%= hossz %>sec
        )
        
        </div>
    <%
        }
    %>
    <img src="phone.jpg">
</body>

</html>